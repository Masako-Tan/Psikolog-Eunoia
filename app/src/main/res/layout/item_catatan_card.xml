<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:elevation="4dp"
        android:padding="16dp">

        <TextView
            android:id="@+id/txvNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Mahasiswa"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txvUmur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Umur | Gender"
            android:textColor="#555555"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F5F5F5"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ringkasan Tes Depresi"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/txvTanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tes Terakhir: -"
                android:textSize="13sp"
                android:textColor="#444444" />

            <TextView
                android:id="@+id/txvSkor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skor Terakhir: -"
                android:textSize="13sp"
                android:textColor="#444444" />

            <TextView
                android:id="@+id/txvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: -"
                android:textSize="13sp"
                android:textColor="#444444" />
        </LinearLayout>

        <TextView
            android:id="@+id/txvObservasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Observasi Psikolog"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/txvIsiObservasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Isi observasi"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textColor="@color/blue"
                android:backgroundTint="@color/white"
                android:stateListAnimator="@null" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hapus"
                android:layout_marginStart="8dp"
                android:textColor="@color/white"
                android:background="@color/blue"
                android:stateListAnimator="@null" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>