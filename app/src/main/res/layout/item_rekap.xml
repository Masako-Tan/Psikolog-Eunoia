<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/llyRekap"
        android:layout_width="374dp"
        android:layout_height="175dp"
        android:layout_marginStart="19.5dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">
        <LinearLayout
            android:layout_width="374dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">
            <ImageView
                android:id="@+id/imgIcha"
                android:layout_width="235dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/icha" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txvIcha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Icha Septina"
                    android:textColor="@color/black"
                    android:textSize="21dp"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txvUmuricha"
                        android:layout_width="145dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="19 Tahun"
                        android:textSize="14.5dp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/txvHubung"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="|"
                        android:textSize="14.5dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/txvPerempuan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Perempuan"
                        android:textSize="14.5dp"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/txvJurusanicha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Informatika"
                    android:textSize="14.5dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/txvEmailicha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="icha.septina@gmail.com"
                    android:textSize="14.5dp"
                    android:textColor="@color/black"/>

                <Button
                    android:id="@+id/btnSelengkapnya"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:textColor="@color/white"
                    android:text="Selengkapnya"
                    android:textSize="9dp"
                    android:backgroundTint="@color/dark_blue"
                    android:layout_marginStart="100dp" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>