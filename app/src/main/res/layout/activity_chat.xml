<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatActivity"
    android:background="@color/white">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/llyBack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#E8F1FF"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="9dp"
            android:src="@drawable/back" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:clipToOutline="true"
            android:background="@drawable/layout_circle"
            android:src="@drawable/icha"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/txvNamaPsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Icha Septina"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <!-- ScrollView isi chat -->
    <ScrollView
        android:id="@+id/chatScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/llyBack"
        app:layout_constraintBottom_toTopOf="@id/llySend"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- CHAT CONTAINER -->
        <LinearLayout
            android:id="@+id/chatContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Chat Pembuka -->
            <LinearLayout
                android:id="@+id/llyChatHasilTes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Chat Bubble Pasien -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bubble"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical"
                    android:layout_gravity="start">

                    <TextView
                        android:id="@+id/txvChatPembuka"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hi Doctor, I just saw my result..."
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Hasil Tes Box -->
                <LinearLayout
                    android:id="@+id/llyBoxHasil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bubble"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical"
                    android:layout_gravity="start">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ini adalah hasil tes saya"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_rounded"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:layout_marginBottom="8dp"
                        android:backgroundTintMode="src_in"
                        android:backgroundTint="#FFBABA">

                        <TextView
                            android:id="@+id/txvSkorStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Skor Pasien : 47\nStatus: Mengalami depresi"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Klik untuk Informasi Lebih Lanjut"
                        android:textColor="@color/blue"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Input Chat -->
    <LinearLayout
        android:id="@+id/llySend"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#F3F3F3"
        android:padding="8dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/plus" />

        <EditText
            android:id="@+id/edtChat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/chat_border"
            android:hint="Ketik pesan..."
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/emoji"
            android:layout_marginStart="8dp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/send"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
